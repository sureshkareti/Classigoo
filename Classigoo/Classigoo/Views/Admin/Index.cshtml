
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "User", FormMethod.Post, new { id = "LoginForm", data_toggle = "validator" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="ReturnUrl" value="@Request.QueryString["ReturnUrl"]" />
    <div>
        @*<div class="breadcrumb-block">

            </div>*@

        <div class="user-form-block">
            <div class="container" style="max-width:970px !important;margin:auto;">
                <div class="row">

                    <div class="col-md-3">

                    </div>
                    <div class="col-md-6 col-xs-12 col-sm-12">
                        <div class="registration-form-block">
                            <div class="registration-form-title">
                                <h4>Sign in</h4>
                            </div>
                            <div class="form-block">
                                <span name="status">@ViewBag.status</span>
                                <br />
                                <form class="form-common">
                                    <div class="form-group">
                                        <label for="userName">User Name *</label>
                                        <input type="text" class="form-control" id="inputEmailPhone"  name="email-phone" placeholder="user name" data-error="Please enter a valid PhoneNumber." required onblur="CheckLoginType()" style="height: auto;font-size: 14px;padding: 11px 0 11px 30px;border-radius: 3px;border: 1px solid #e7e7e7; background: transparent;">
                                        <div class="help-block with-errors"></div>

                                    </div>
                                    <div class="form-group">
                                        <label for="password">Password *</label>

                                        <input type="password" class="form-control" data-minlength="5" maxlength="10" id="inputPassword" name="pwd" data-error="Please enter a Password." placeholder="Password" required style="height: auto;font-size: 14px;padding: 11px 0 11px 30px;border-radius: 3px;border: 1px solid #e7e7e7; background: transparent;">
                                        <div class="help-block with-errors"></div>
                                    </div>

                                    <div class="form-group form-check-row">

                                        <div class="col-md-6 col-sm-12 col-xs-12">
                                            <div class="row">
                                                <div class="form-check">
                                                    <label class="custom-control custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input">
                                                        <span class="custom-control-indicator"></span>
                                                        <span class="custom-control-description">Remember Me</span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-12 col-xs-12">
                                            <div class="row">
                                                <div class="forgot-link-block" style="text-align:right">
                                                    @*<a href="~/User/ForgotPwd" class="forgot-link">Forget Password?</a>*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-btn-block">
                                            <button type="submit" class="form-btn">Sign in</button>
                                        </div>
                                    </div>
                                </form>
                              
                            </div>
                        </div>
                    </div>
                    <!-- panel -->
                </div>

                <div class="col-md-3">
                    @Html.Hidden("logintype")
                </div>
            </div>
        </div>
    </div>


        @*</div>*@


}
