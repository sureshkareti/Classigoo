
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Contact", "List", FormMethod.Post, new { data_toggle = "validator" }))
{

    <div>
        @*<div class="breadcrumb-block">

        </div>*@

        <div class="about-widget-section">

            <div class="container" style="max-width:970px !important;margin:auto;">
                <div style="background-color:#f5f5f5;border-radius: 4px;">
                    <div style="width:50%;float:left">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/List/Home">Home</a></li>
                            <li class="breadcrumb-item active">Contact us</li>
                        </ol>
                    </div>

                    <div class="breadcrumb-call-to-action" style="padding: 8px 15px;list-style: none;background-color: #f5f5f5;border-radius: 4px;">
                        <p>Call Us : <i style="color:#F70" class="fa fa-phone" aria-hidden="true"></i> +91-96036-999-00</p>
                        @*<a href="javascript:void(0)" class="contact-btn">
                            Call Us
                        </a>*@
                    </div>
                </div>

            </div>
            <br />
            <div class="container" style="max-width:970px !important;margin:auto;">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="about-widget-block">
                         
                            <h2>We are Classigoo</h2>

                            <p style="text-align:justify;">
                                Classigoo is your one-click online vehicle marketplace for all vehicle Bookings and Sale- Purchase services. Now with Classigoo, you can book all vehicles both online and offline (960 36 999 00) and Classigoo strives to afford online vehicle services in your villages and towns. Classigoo is an online vehicle market that connects Users and vehicle owners for vehicle bookings and connects buyers and sellers for sale -Purchase needs.  Classigoo serves the vehicle categories like Commercial Vehicles, Agricultural Vehicles, and Transportation Vehicles and Passenger vehicles.
                            </p>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
        <!-- about-widget section -->
        <div class="contact-section">
            <div class="container" style="max-width:970px !important;margin:auto;">
                <div class="section-title">
                    <h2>Get in Touch</h2>
                    <p>We really appreciate you taking the time to get in touch</p>
                </div>
                <div class="row">
                    <div class="col-md-1">

                    </div>
                    <div class="col-md-4">
                        <div class="contactinfo-block">
                            <h4>Contact us</h4>
                            <div class="contact-widget">
                                @*class="address"*@
                                <p>
                                    <i class="fa fa-map-marker" aria-hidden="true"></i>
                                    <span>11-24, Sri Shankar Colony,<br> LB Nagar, Hyderabad,<br> Telangana - 74</span>
                                </p>
                                <p>
                                    <i class="fa fa-phone" aria-hidden="true"></i>
                                    <span>
                                        +91-96036-999-00
                                    </span>
                                </p>
                                <p class="last-type">
                                    <i class="fa fa-envelope-o" aria-hidden="true"></i>
                                    <span>
                                        classigoo2018@gmail.com                                    
                                    </span>
                                </p>
                                <div class="social-with-label">
                                    <span>Social Media: </span>
                                    <ul class="social">
                                        <li>
                                            <a href="javascript:void(0)">
                                                <i class="fa fa-facebook" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)">
                                                <i class="fa fa-twitter" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)">
                                                <i class="fa fa-youtube-play" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)">
                                                <i class="fa fa-vimeo" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0)">
                                                <i class="fa fa-google-plus" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="contactform-block">
                            <form id="contactForm" class="form-common">
                                <div class="form-group">
                                    <input id="name" name="name" type="text" class="form-control" placeholder="Name" required>
                                </div>
                                <div class="form-group">
                                    <input id="email" name="email" type="email" class="form-control" placeholder="Email" required>
                                </div>
                                <div class="form-group">
                                    <input id="phone" name="phone" type="text" pattern="[0-9]{10}" class="form-control" placeholder="Phone" required>
                                </div>
                                <div class="form-group textarea-form-group">
                                    <textarea id="message" name="message" rows="5" cols="5" class="form-control" placeholder="Message" required></textarea>
                                </div>
                                <button type="submit" class="form-btn">Submit</button>
                                <p class="input-success">Your message has sent. Thanks for contacting.</p>
                                <p class="input-error">Sorry, message couldn't sent for some error</p>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-1">

                    </div>
                </div>
            </div>
        </div>
        

    </div>
}
<br />
<br />


<div class="loader-wrap" style="display:none">
    <div class="loader">
        <span class="loader-item"></span><span class="loader-item"></span><span class="loader-item"></span><span class="loader-item"></span><span class="loader-item"></span><span class="loader-item"></span><span class="loader-item"></span><span class="loader-item"></span>
        <span class="loader-item"></span><span class="loader-item"></span>
    </div>
</div>


@section Styles {
    <link href="@Url.Content("~/Content/CustomeNew/Index1.css")" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />



}
<script type="text/javascript">
    $(document).ready(function () {

        if ("@ViewBag.send" !== "") {

            if ("@ViewBag.send" == "success") {
                $(".input-success").css("display", "block");
                $(window).scrollTop($('.section-title').offset().top);
            }
            else {
                $(".input-error").css("display", "block");
                $(window).scrollTop($('.section-title').offset().top);
            }

        }
    });
</script>

