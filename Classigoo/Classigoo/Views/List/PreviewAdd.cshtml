<script type="text/javascript">
    $(document).ready(function () {


        //$(".my-foto-container").fadeOut(100, function () {
        //    $(this).attr("src", $(That).attr("src"))
        //    .attr("data-large", $(That).attr("data-large")).fadeIn(200)
