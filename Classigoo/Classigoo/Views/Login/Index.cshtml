@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Classigoo - Responsive Admin Dashboard Template</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">
    <!-- App css -->
    <link href="~/Content/Admin/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Admin/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Admin/assets/css/style.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/Admin/assets/js/modernizr.min.js"></script>
</head>

@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { id = "LoginForm", data_toggle = "validator" }))
{
    <body>
        @Html.AntiForgeryToken()
        @*<input type="hidden" name="ReturnUrl" value="@Request.QueryString["ReturnUrl"]" />*@
        <div class="account-pages"></div>
        <div class="clearfix"></div>
        <div class="wrapper-page">
            <div class="text-center">
                <a href="~/Login/Index" class="logo">
                    <img src="~/images/Classigoo_Logox50.png" alt="" height="40" class="logo-large">
                    @*<span>Classigoo</span>*@
                </a>
                <h5 class="text-muted mt-0 font-600">India's No.1 Online Vehicle Market</h5>
            </div>
            <div class="m-t-40 card-box">
                <div class="text-center">
                    <h4 class="text-uppercase font-bold mb-0">Sign In</h4>
                </div>
                <div class="p-20">
                    <form class="form-horizontal m-t-20" action="#">
                        <div class="form-group">
                            <div class="col-xs-12">
                                <input class="form-control" type="text" required="" placeholder="Username" name="userName">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <input class="form-control" type="password" required="" placeholder="Password" name="pwd">
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-xs-12">
                                <div class="checkbox checkbox-custom">
                                    <input id="checkbox-signup" type="checkbox">
                                    <label for="checkbox-signup">
                                        Remember me
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-center m-t-30">
                            <div class="col-xs-12">
                                <button class="btn btn-custom btn-bordred btn-block waves-effect waves-light" type="submit">Log In</button>
                            </div>
                        </div>
                        <div class="form-group text-center m-t-10" id="ErrorMessage" style="padding:10px;">
                            <div class="col-xs-12">
                                @if (ViewBag.Login != null)
                                {
                                    <h5 style="color:red;">@ViewBag.Login</h5>
                                }
                            </div>
                        </div>


                    </form>
                </div>
            </div>


        </div>
        <!-- end wrapper page -->
        <!-- jQuery  -->
        <script src="~/Content/Admin/assets/js/jquery.min.js"></script>
        <script src="~/Content/Admin/assets/js/popper.min.js"></script>
        <script src="~/Content/Admin/assets/js/bootstrap.min.js"></script>
        <script src="~/Content/Admin/assets/js/waves.js"></script>
        <script src="~/Content/Admin/assets/js/jquery.slimscroll.js"></script>
        <!-- App js -->
        <script src="~/Content/Admin/assets/js/jquery.core.js"></script>
        <script src="~/Content/Admin/assets/js/jquery.app.js"></script>

    </body>
}
</html>
