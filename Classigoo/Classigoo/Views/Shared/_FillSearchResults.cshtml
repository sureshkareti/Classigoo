<script type="text/javascript">
    $(document).ready(function () {
        $('#bloglist .bloglisting').hide();
        if ($("#list").hasClass("btn-orange")) {
            $('#bloglist .bloglisting:nth-child(2)').show();
        }
        else if ($("#grid").hasClass("btn-orange")) {
            $('#bloglist .bloglisting:first').show();

        }
        $('#page-selection').bootpag({
            total: @Model.PageCount,
            page:@Model.CurrentPageIndex,
            leaps: true,
            firstLastUse: true,
            first: 'First',
            last: 'Last'
        });

    });

</script>