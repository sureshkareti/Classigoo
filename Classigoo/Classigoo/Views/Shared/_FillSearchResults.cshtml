                                }
                                else if (innerAdds.Category == Constants.PassengerVehicle)
                                {
                                    <div class="category color4"> <i class="fa fa-home"></i> @innerAdds.Category</div>
                                }
                                else if (innerAdds.Category == Constants.AgriculturalVehicle)
