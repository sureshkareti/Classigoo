                }

        .navbar .dropdown-item .material-icons {
            font-size: 21px;
            line-height: 16px;
            vertical-align: middle;
            margin-top: -2px;
        }

       .login-nav nav {
            display: block;
            text-align: center;
            width: 100%;
        }

          .login-nav  nav ul {
                margin: 0;
                padding: 0;
                list-style: none;
            }

       .login-nav .nav a {
