            $.get('../Scripts/Json/locations.json', function (data) {
                var filtered = new Array();
                $.each(data, function (i, field) {
                    var j;
                    for (j in field.subregions) {
                        filtered.push(field.subregions[j].name_long);

                    }

                });
                     var options = {
                         data: filtered,
                         list: {
                             match: {
                                 enabled: true
                             },
                             onSelectItemEvent: function () {
                                 $("#locations").attr("value", $("#locations").getSelectedItemData());
                             }
                         }

                    };

                    $("#locations").easyAutocomplete(options);
            });
