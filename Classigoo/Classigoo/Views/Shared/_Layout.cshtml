                    border-bottom-color: orange;
                }

           .login-nav .nav li:hover > a {
                color: black;
                 background: #337ab7;
            }

            .login-nav .nav li ul li:hover > a {
                color: orange;
                 background:#FFFFFF;
            }            

           .login-nav .nav li li a {
                margin-top: 1px;
                background-color: #FFFFFF;
                color: #777;
                font-size:14px;
                border-radius: 1px;
                border-color: #e5e5e5;
                box-shadow: 0 2px 8px rgba(0,0,0,.05);
            }


            /* submenu positioning*/
           .login-nav .nav ul {
                position: absolute;
                white-space: nowrap;
                /*border-bottom: 5px solid orange;*/
                z-index: 1;
                left: -99999em;
            }

           .login-nav .nav > li:hover > ul {
                left: auto;
                /*margin-top: 5px;*/
                min-width: 100%;
            }

           .login-nav .nav > li li:hover > ul {
                left: 100%;
                margin-left: 1px;
                top: -1px;
            }
            /* arrow hover styling */
           .login-nav .nav > li > a:first-child:nth-last-child(2):before {
                border-top-color: #aaa;
            }

           .login-nav .nav > li:hover > a:first-child:nth-last-child(2):before {
                border: 5px solid transparent;
                border-bottom-color: orange;
                margin-top: -5px;
            }

           .login-nav .nav li li > a:first-child:nth-last-child(2):before {
                border-left-color: #aaa;
                margin-top: -5px;
            }

           .login-nav .nav li li:hover > a:first-child:nth-last-child(2):before {
                border: 5px solid transparent;
                border-right-color: orange;
                right: 10px;
            }
    </style>

