@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string emailPattern = @"[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$";
}
@using (Html.BeginForm("Login", "User", FormMethod.Post, new { id = "LoginForm", data_toggle = "validator" }))
{
    @Html.AntiForgeryToken()
    <div>
        @*<div class="breadcrumb-block">

        </div>*@

        <div class="user-form-block">
            <div class="container" style="max-width:970px !important;margin:auto;">
                <div class="row">

                    <div class="col-md-3">

                    </div>
                    <div class="col-md-6 col-xs-12 col-sm-12">
                        <div class="registration-form-block">
                            <div class="registration-form-title">
                                <h4>Sign in</h4>
                            </div>
                            <div class="form-block">
                                <span name="status">@ViewBag.status</span>
                                <br />
                                <form class="form-common">
                                    <div class="form-group">
                                        <label for="userName">Phone Number *</label>
                                        <input type="text" class="form-control" id="inputEmailPhone" pattern='@emailPattern|^\d{10}$' name="email-phone" placeholder="PhoneNumber" data-error="Please enter a valid PhoneNumber." required onblur="CheckLoginType()" style="height: auto;font-size: 14px;padding: 11px 0 11px 30px;border-radius: 3px;border: 1px solid #e7e7e7; background: transparent;">
                                        <div class="help-block with-errors"></div>
                                       
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Password *</label>

                                        <input type="password" class="form-control" data-minlength="5" maxlength="10" id="inputPassword" name="pwd" data-error="Please enter a Password." placeholder="Password" required style="height: auto;font-size: 14px;padding: 11px 0 11px 30px;border-radius: 3px;border: 1px solid #e7e7e7; background: transparent;">
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    
                                    <div class="form-group form-check-row">

                                        <div class="col-md-6 col-sm-12 col-xs-12">
                                            <div class="row">
                                                <div class="form-check">
                                                    <label class="custom-control custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input">
                                                        <span class="custom-control-indicator"></span>
                                                        <span class="custom-control-description">Remember Me</span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-12 col-xs-12">
                                            <div class="row">
                                                <div class="forgot-link-block" style="text-align:right">
                                                    <a href="#" class="forgot-link">Forget Password?</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-btn-block">
                                            <button type="submit" class="form-btn">Sign in</button>
                                        </div>
                                    </div>
                                </form>
                                <div class="signin-others-option-block">
                                    <h5>Not a Member? <a href="~/User/Register">Sign up</a></h5>
                                   
                                    <div class="row form-group  center-block">
                                        <div class="col-md-12 text-center">
                                            <a href="~/User/LoginWithOtp">Login with phone & OTP</a>
                                        </div>

                                    </div>
                                    <hr />
                                    @*or
                                    <p>Login with your social media network</p>*@
                                    <div class="social-icon-btn-group-detail">

                                        @*<fb:login-button scope="public_profile,email" onlogin="checkLoginState();" class="icon-btn-fb" style="background-color:#3b5998;color:#fff;border:1px double #3b5998" >
                                                <i class="fa fa-facebook"></i> Facebook
                                            </fb:login-button>*@
                                        @*<a href="javascript:void(0)" class="icon-btn-fb" data-onsuccess="onSignIn" onlogin="checkLoginState();" scope="public_profile,email">
                                                <i class="fa fa-facebook"></i> Facebook
                                            </a>*@
                                        @*<div class="btn btn-success"  style="background-color:#3b5998;color:#fff;border:1px double #3b5998">
                                            <fb:login-button scope="public_profile,email" onlogin="checkLoginState()" class="icon-btn-fb">
                                                <i class="fa fa-facebook"></i> Facebook
                                            </fb:login-button>
                                        </div>*@
                                        @*<div class="col-md-6 text-center">
                                            <div class="g-signin2">
                                                <a class="btn btn-success" 
                                                   style="background-color:#dd4b39;color:#fff;border:1px double #dd4b39" data-onsuccess="onSignIn">
                                                    <span class="fa fa-google-plus"></span> Sign in using Google
                                                </a>
                                            </div>*@

                          @*<div class="g-signin2 btn" data-onsuccess="onSignIn" onclick="ClickLogin()"
                               @*style="background-color:#dd4b39;color:#fff;border:1px double #dd4b39"*@
            @*<gplus:login-button scope="public_profile,email"  class="icon-btn-gplus">
                <i class="fa fa-google-plus"></i>&nbsp;&nbsp; Google +
            </gplus:login-button>

        </div>*@
                   @*<div class="g-signin2 btn btn-success" data-onsuccess="onSignIn" 
                        style="background-color:#dd4b39;color:#fff;border:1px double #dd4b39">*@

                @*</div>*@
            </div>
                                    @*<div class="g-signin2 btn btn-success" data-onsuccess="onSignIn" style="background-color:#dd4b39;color:#fff;border:1px double #dd4b39">
                                        <gplus:login-button scope="public_profile,email"  class="icon-btn-gplus">
                                            <i class="fa fa-google-plus"></i>&nbsp;&nbsp; Google +
                                        </gplus:login-button>

                                    </div>*@

                                            @*<a href="javascript:void(0)" class="icon-btn-gplus" data-onsuccess="onSignIn" onlogin="checkLoginState();">
                <i class="fa fa-google-plus"></i> Google +
            </a>*@
                                        </div>
                                </div>
                            </div>
                        </div>
                        <!-- panel -->
                    </div>

                    <div class="col-md-3">
                        @Html.Hidden("logintype")
                    </div>
                </div>
            </div>
        </div>


    @*</div>*@
    
    
}

<meta name="google-signin-client_id" content="443252547392-5hvtt0c60miftkn14hudh9p7q43ctvl2.apps.googleusercontent.com">
