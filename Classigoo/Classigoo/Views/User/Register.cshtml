@model User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Register", "User", FormMethod.Post, new { data_toggle = "validator" }))
{

    <div>
        <div class="breadcrumb-block">

        </div>

        <div class="user-form-block">
            <div class="container" style="max-width:970px !important;margin:auto;">
                <div class="row">

                    <div class="col-md-3">

                    </div>
                    <div class="col-md-6 col-xs-12 col-sm-12">
                        <div class="registration-form-block">
                            <div class="registration-form-title">
                                <h4>Registration</h4>
                            </div>
                            <div class="form-block">
                             
                                <form class="form-common">
                                    <div class="form-group">
                                        <label for="userName">Phone *</label>
                                        <input type="text" class="form-control" pattern="^\d{10}$" id="inputPhone" name="inputPhone" placeholder="Enter your PhoneNumber" data-error="Please enter a valid  PhoneNumber." required style="height: auto;font-size: 14px;padding: 11px 0 11px 30px;border-radius: 3px;border: 1px solid #e7e7e7; background: transparent;">
                                        <div class="help-block with-errors"></div>
                                        
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Password *</label>

                                        <input type="password" data-minlength="5" maxlength="20" class="form-control" id="inputPassword" name="inputPassword" data-error="Please enter a Password." placeholder="Password" required style="height: auto;font-size: 14px;padding: 11px 0 11px 30px;border-radius: 3px;border: 1px solid #e7e7e7; background: transparent;">                                        
                                        <div class="help-block with-errors"></div>
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Name</label>

                                        <input type="text" data-minlength="2" maxlength="20" pattern="^[A-z]+$"  class="form-control" id="inputName" name="inputName" data-error="Please enter name." placeholder="name" required style="height: auto;font-size: 14px;padding: 11px 0 11px 30px;border-radius: 3px;border: 1px solid #e7e7e7; background: transparent;">
                                       
                                        <div class="help-block with-errors"></div>
                                    </div>
                                   
                                    <div class="form-group">
                                        <div class="form-btn-block">
                                            <button type="submit" class="form-btn">Register</button>
                                        </div>
                                    </div>
                                </form>
                                <div class="signin-others-option-block">
                                    or
                                    <p>Login with your social media network</p>
                                    <div class="social-icon-btn-group-detail">
                                        <a href="javascript:void(0)" class="icon-btn-fb">
                                            <i class="fa fa-facebook"></i> Facebook
                                        </a>

                                        <a href="javascript:void(0)" class="icon-btn-gplus">
                                            <i class="fa fa-google-plus"></i> Google +
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- panel -->
                    </div>

                    <div class="col-md-3">

                    </div>
                </div>
            </div>
        </div>

        <div class="call-to-action-section" style="background:none;">
            <div class="container" style="max-width:970px !important;margin:auto;">
                <h2>
                    Start today to get more exposure and <br> grow your business
                </h2>
                <p>
                    There are many consumers & business owners find this directory is helpful.
                </p>
                <div class="btn-group">
                    <a href="~/Post/Index" class="icon-btn adining-listing-btn">
                        <i class="fa fa-plus" aria-hidden="true"></i> Add Listing
                    </a>
                    <a href="~/List/Index" class="icon-btn explore-listing-btn">
                        <i class="fa fa-search" aria-hidden="true"></i> Explore Listing
                    </a>
                </div>
            </div>
        </div>
        <!-- call-to-action section-->

    </div>


    <div class="panel panel-primary row loginform" style="max-width:970px !important;margin:auto;display:none">
        <div class="panel-heading">Registration</div>
        <div class="panel-body">
                <div class="col-md-1">

                </div>
                <div class="col-md-10" style="padding-top:30px">
                   
                    <div >
                        <span name="status">@ViewBag.status</span>
                        <br />
                        <div class="row form-group">

                            <div class="col-md-7">
                                <div class="row form-group">
                                    <div class="col-md-3 text-left">

                                        <label class="control-label" for="inputPhone">Phone</label>
                                    </div>
                                    <div class="col-md-9">

                                        <input class="form-control" pattern="^\d{10}$" data-error="Please enter a valid 10 digit Phone Number." id="inputPhone" name="inputPhone" placeholder="Phone Number" type="text" required />
                                        <div class="help-block with-errors"></div>

                                    </div>

                                </div>
                                <div class="row form-group">
                                    <div class="col-md-3 text-left">

                                        <label for="inputPassword" class="control-label">Password</label>
                                    </div>
                                    <div class="col-md-9">
                                       
                                        <input type="password" data-minlength="5" maxlength="20" class="form-control" id="inputPassword" name="inputPassword" data-error="Please enter a minimum of 5 letters Password." placeholder="Password" required />
                                        <div class="help-block with-errors"></div>
                                    </div>

                                </div>
                                <div class="row form-group">
                                    <div class="col-md-3 text-left">

                                        <label class="control-label" for="inputName">Name</label>
                                    </div>
                                    <div class="col-md-9">
                                    
                                        <input class="form-control" data-minlength="2" maxlength="20" pattern="^[A-z]+$" data-error="Please enter a minimum of 2 characters Name." id="inputName" name="inputName" placeholder="Name" type="text" required />
                                        <div class="help-block with-errors"></div>
                                    </div>

                                </div>

                            </div>
                          
                        </div>
                        <div class="row form-group">

                            <div class="col-md-12">

                                <div class="row form-group">
                                    <div class="col-md-2 text-right">

                                    </div>
                                    <div class="col-md-10" style="padding-right:0;padding-left:0">
                                        <label style="font-weight:normal" for="inputAccept" >
                                        <input id="inputAccept" type="checkbox" required data-error="required"/>

                                            <span style="color:red">*</span>By registering on Classigoo, you accept our <a href="#"> Terms of Use</a>
                                        </label>
                                        <div class="help-block with-errors"></div>
                                    </div>

                                </div>
                            </div>
                           
                        </div>
                        <div class="row form-group">
                            <div class="col-md-7">

                                <div class="row form-group">
                                    <div class="col-md-3 text-right">

                                    </div>
                                    <div class="col-md-9" style="padding-right:0">
                                        <input type="submit" class="btn btn-primary" value="Register" style="width:100px" />
                                    </div>

                                </div>
                            </div>
                          
                        </div>


                    </div>


                </div>
          
        </div>
    </div>

}
   

@section Styles {

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/CustomeNew/Index1.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/Custome/account.css" rel="stylesheet" />

}


@section scripts{
    
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/ScriptsNew/bootstrapvalidator.min.js"></script>
}

