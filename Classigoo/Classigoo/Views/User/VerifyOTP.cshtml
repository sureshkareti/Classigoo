@model LoginWithOTP
@{
    ViewBag.Title = "VerifyOTP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>VerifyOTP</h2>

@using (Html.BeginForm("VerifyOTP", "User", FormMethod.Post, new { id = "LoginForm", data_toggle = "validator" }))
{
    <div class="container" style="max-width:970px !important;margin:auto;">
        <span>@ViewBag.Status</span>
        <div class="form-group">

            @*<span>Please enter the verification code sent to </span><span name="PhoneNumber">@Model.PhoneNumber</span><span> to Login</span>*@
            @Html.HiddenFor(model => model.PhoneNumber)
            @Html.HiddenFor(model => model.VerifyType)
            @Html.TextBoxFor(model => model.OTP, new { @data_error = "Please enter a valid 4 digit Numeric OTP.",@class = "form-control", @placeholder = "OTP", required = "required", pattern = @"^(\d{4})$" })
            @Html.ActionLink("Resend OTP", "ResendOtp","User", Model,null)
            <div class="help-block with-errors"></div>
            <input type="submit" value="VerifyOTP" />
        </div>
        </div>
}
@section scripts{
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/ScriptsNew/bootstrapvalidator.min.js"></script>
}